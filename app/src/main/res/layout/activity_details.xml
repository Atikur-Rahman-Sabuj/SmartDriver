<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!-- Here you can put your logo or brand name -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="120dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textStyle="bold"
                android:text="Driver Name:"
                android:textSize="17dp"
                android:maxLines="1"
                android:padding="10dp"

                android:textColorHint="#000" />

            <TextView
                android:id="@+id/driversname"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"



                android:maxLines="1"
                android:padding="10dp"

                android:textColorHint="#000" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textStyle="bold"
                android:text="Job Location:"
                android:textSize="17dp"

                android:maxLines="1"
                android:padding="10dp"

                android:textColorHint="#000" />

            <TextView
                android:id="@+id/driverjoblocation"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"


                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="10dp"

                android:textColorHint="#000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textStyle="bold"
                android:text="Job Preference:"
                android:maxLines="1"
                android:padding="10dp"
                android:textSize="17dp"

                android:textColorHint="#000" />

            <TextView
                android:id="@+id/driverjobreferences"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"


                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="10dp"

                android:textColorHint="#000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textStyle="bold"
                android:text="Experience:"
                android:maxLines="1"
                android:padding="10dp"
                android:textSize="17dp"

                android:textColorHint="#000" />

            <TextView
                android:id="@+id/driverexperience"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"



                android:maxLines="1"
                android:padding="10dp"

                android:textColorHint="#000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textStyle="bold"
                android:text="Experience Type:"
                android:textSize="17dp"
                android:maxLines="1"
                android:padding="10dp"

                android:textColorHint="#000" />

            <TextView
                android:id="@+id/driverexperiencetype"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"



                android:maxLines="1"
                android:padding="10dp"

                android:textColorHint="#000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:textStyle="bold"
                android:text="Car Experience:"
                android:textSize="17dp"
                android:maxLines="1"
                android:padding="10dp"

                android:textColorHint="#000" />

            <TextView
                android:id="@+id/carexperience"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"

                android:background="@android:color/transparent"
                android:drawablePadding="12dp"




                android:maxLines="1"
                android:padding="10dp"

                android:textColorHint="#000" />


        </LinearLayout>













    </LinearLayout>

</android.support.constraint.ConstraintLayout>